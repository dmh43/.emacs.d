(ns game.ai)

(defn computer-move
  [game]
  game)

(defn next-turn
  [game]
  (if (game-over? game)
    (assoc game :menu (end-menu game))
    (->
      (case (:mode game)
        "HvC" (computer-move game)
        "CvC" (computer-move game))
      (assoc :player-turn (if (= :P1 (:player-turn game))
                                 :P2
                                 :P1)))))
